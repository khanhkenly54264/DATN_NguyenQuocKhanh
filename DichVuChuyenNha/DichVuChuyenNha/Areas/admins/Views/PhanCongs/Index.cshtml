@model IEnumerable<DichVuChuyenNha.Models.PhanCong>

@{
    ViewData["Title"] = "Quản Lý Phân Công";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="fas fa-tasks me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Tạo Phân Công Mới
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Nhân Viên</th>
                            <th>Ngày Phân Công</th>
                            <th>Đơn Hàng</th>
                           
                            <th class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-2 bg-light-primary rounded-circle p-2">
                                            <i class="fas fa-user-tie text-primary"></i>
                                        </div>
                                        <div>
                                            <strong>NV-@item.MaNhanVienNavigation?.MaNhanVien</strong>
                                            <div class="text-muted small">
                                                @item.MaNhanVienNavigation?.MaNhanVienNavigation?.HoTen
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @item.NgayPhanCong?.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar me-2 bg-light-info rounded-circle p-2">
                                            <i class="fas fa-truck-loading text-info"></i>
                                        </div>
                                        <div>
                                            <strong>ĐH-@item.MaDonHangNavigation?.MaDonHang</strong>
                                            <div class="text-muted small">
                                                @item.MaDonHangNavigation?.DiaChiHienTai → @item.MaDonHangNavigation?.DiaChiDich
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.MaPhanCong" class="btn btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.MaPhanCong" class="btn btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaPhanCong" class="btn btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-light-primary {
        background-color: rgba(13,110,253,0.1);
    }

    .bg-light-info {
        background-color: rgba(23,162,184,0.1);
    }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.75rem;
    }

    .btn-group .btn {
        margin-right: 0.25rem;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
</style>