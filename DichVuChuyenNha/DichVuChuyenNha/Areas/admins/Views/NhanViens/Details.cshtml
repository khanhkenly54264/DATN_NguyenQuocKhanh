@model DichVuChuyenNha.Models.NhanVien

@{
    ViewData["Title"] = "Thông Tin Chi Tiết Nhân Viên";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-tie me-2"></i>@ViewData["Title"]
                        </h4>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Employee Profile -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="avatar-profile mb-3">
                                <div class="avatar bg-light-primary rounded-circle p-3 mb-2">
                                    <i class="fas fa-user-tie fa-3x text-primary"></i>
                                </div>
                                <h5 class="mb-1">@Model.MaNhanVienNavigation?.HoTen</h5>
                                <span class="badge bg-primary mb-2">Nhân viên</span>
                                <p class="text-muted small">Mã NV: @Model.MaNhanVien</p>
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.MaNhanVien" class="btn btn-primary">
                                    <i class="fas fa-edit me-1"></i> Chỉnh sửa
                                </a>
                            </div>
                        </div>

                        <!-- Employee Details -->
                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin công việc</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Vị trí</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info text-dark">
                                                @Model.ViTri
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">Trạng thái</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.TrangThaiSanSang == true)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>Sẵn sàng làm việc
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times-circle me-1"></i>Chưa sẵn sàng
                                                </span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Ngày tạo</dt>
                                        <dd class="col-sm-8">@DateTime.Now.ToString("dd/MM/yyyy")</dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Thông tin cá nhân</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Họ và tên</dt>
                                        <dd class="col-sm-8">@Model.MaNhanVienNavigation?.HoTen</dd>

                                        <dt class="col-sm-4">Email</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-envelope me-2 text-muted"></i>
                                            @Model.MaNhanVienNavigation?.Email
                                        </dd>

                                        <dt class="col-sm-4">Số điện thoại</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-phone me-2 text-muted"></i>
                                            @Model.MaNhanVienNavigation?.SoDienThoai
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-profile {
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }

    .avatar {
        width: 100px;
        height: 100px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    dt {
        font-weight: 600;
        color: #6c757d;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.5em 0.75em;
    }

    .bg-light-primary {
        background-color: rgba(13,110,253,0.1);
    }
</style>