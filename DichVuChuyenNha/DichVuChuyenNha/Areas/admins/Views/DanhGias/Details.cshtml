@model DichVuChuyenNha.Models.DanhGia

@{
    ViewData["Title"] = "Chi tiết đánh giá";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-star me-2"></i>@ViewData["Title"] - #@Model.MaDanhGia
                        </h4>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.MaDanhGia" class="btn btn-warning btn-sm me-2">
                                <i class="fas fa-edit me-1"></i> Chỉnh sửa
                            </a>
                            <a asp-action="Index" class="btn btn-light btn-sm">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Review Information -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin đánh giá</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold">Điểm đánh giá:</dt>
                                        <dd class="col-sm-8">
                                            <div class="rating-stars mb-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Model.DiemDanhGia)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-warning"></i>
                                                    }
                                                }
                                                <span class="ms-2">(@Model.DiemDanhGia/5 sao)</span>
                                            </div>
                                        </dd>

                                        <dt class="col-sm-4 fw-bold">Ngày tạo:</dt>
                                        <dd class="col-sm-8">@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Comment Section -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-comment-dots me-2"></i>Bình luận</h5>
                                </div>
                                <div class="card-body">
                                    <div class="review-comment">
                                        @if (!string.IsNullOrEmpty(Model.BinhLuan))
                                        {
                                            <p class="mb-0">@Model.BinhLuan</p>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0">Không có bình luận</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Order Information -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Thông tin đơn hàng</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold">Mã đơn hàng:</dt>
                                        <dd class="col-sm-8">@Model.MaDonHangNavigation?.MaDonHang</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-12 text-center mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.MaDanhGia" class="btn btn-primary px-4 me-3">
                                <i class="fas fa-edit me-1"></i> Chỉnh sửa
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-list me-1"></i> Danh sách đánh giá
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }

    .btn-outline-secondary {
        border-color: #d1d3e2;
    }

    .btn-warning {
        background-color: #f6c23e;
        border-color: #f6c23e;
        color: #1F2D3D;
    }

    .rating-stars {
        font-size: 1.5rem;
        line-height: 1;
    }

    .review-comment {
        min-height: 100px;
    }

    dl.row dt {
        padding-top: 0.25rem;
    }
</style>