@model DichVuChuyenNha.Models.DanhGia

@{
    ViewData["Title"] = "Xóa đánh giá";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-trash-alt me-2"></i>@ViewData["Title"] - #@Model.MaDanhGia
                        </h4>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Bạn có chắc chắn muốn xóa đánh giá này?
                        </h5>
                        <p class="mb-0">Thao tác này không thể hoàn tác. Tất cả thông tin liên quan đến đánh giá sẽ bị xóa vĩnh viễn.</p>
                    </div>

                    <div class="row">
                        <!-- Review Information -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-star me-2"></i>Thông tin đánh giá</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold">Điểm đánh giá:</dt>
                                        <dd class="col-sm-8">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= Model.DiemDanhGia)
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-warning"></i>
                                                }
                                            }
                                            (@Model.DiemDanhGia sao)
                                        </dd>

                                        <dt class="col-sm-4 fw-bold">Ngày tạo:</dt>
                                        <dd class="col-sm-8">@Model.NgayTao?ToString("dd/MM/yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Comment -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-comment me-2"></i>Bình luận</h5>
                                </div>
                                <div class="card-body">
                                    <p>@(string.IsNullOrEmpty(Model.BinhLuan) ? "Không có bình luận" : Model.BinhLuan)</p>
                                </div>
                            </div>
                        </div>

                        <!-- Order Information -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Thông tin đơn hàng</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold">Mã đơn hàng:</dt>
                                        <dd class="col-sm-8">@Model.MaDonHangNavigation?.MaDonHang</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Delete Form -->
                        <div class="col-12">
                            <div class="card border-danger">
                                <div class="card-body text-center">
                                    <form asp-action="Delete" class="d-inline-block">
                                        <input type="hidden" asp-for="MaDanhGia" />
                                        <button type="submit" class="btn btn-danger px-4 me-3">
                                            <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
                                        </button>
                                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                            <i class="fas fa-times me-1"></i> Hủy bỏ
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    .btn-danger {
        background-color: #e74a3b;
        border-color: #e74a3b;
    }

    .btn-outline-secondary {
        border-color: #d1d3e2;
    }

    .alert-warning {
        background-color: #f6e3a3;
        border-color: #f6e3a3;
        color: #856404;
    }

    .border-danger {
        border-color: #e74a3b !important;
    }

    .fa-star {
        font-size: 1.2rem;
    }
</style>