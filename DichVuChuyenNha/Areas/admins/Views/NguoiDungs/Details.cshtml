@model DichVuChuyenNha.Models.NguoiDung

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-circle me-2"></i>@ViewData["Title"]
                        </h4>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- User Profile Column -->
                        <div class="col-md-4 text-center">
                            <div class="avatar-ngdung mb-3">
                                <div class="avatar-ng bg-light-primary rounded-circle p-3 mb-2">
                                    <i class="fas fa-user-tie fa-3x text-primary"></i>
                                </div>
                                <h5 class="mb-1">@Model.HoTen</h5>
                                <span class="badge bg-@(Model.VaiTro == "Admin" ? "danger" : "primary")">
                                    @Model.VaiTro
                                </span>
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.MaNguoiDung" class="btn btn-primary">
                                    <i class="fas fa-edit me-1"></i> Chỉnh sửa
                                </a>
                                <button class="btn btn-outline-secondary" onclick="window.print()">
                                    <i class="fas fa-print me-1"></i> In thông tin
                                </button>
                            </div>
                        </div>

                        <!-- User Details Column -->
                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin cá nhân</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Mã người dùng</dt>
                                        <dd class="col-sm-8">@Model.MaNguoiDung</dd>

                                        <dt class="col-sm-4">Họ và tên</dt>
                                        <dd class="col-sm-8">@Model.HoTen</dd>

                                        <dt class="col-sm-4">Vai trò</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-@(Model.VaiTro == "Admin" ? "danger" : "primary")">
                                                @Model.VaiTro
                                            </span>
                                        </dd>

                                        <dt class="col-sm-4">Ngày tạo</dt>
                                        <dd class="col-sm-8">@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-address-card me-2"></i>Thông tin liên hệ</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Email</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-envelope me-2 text-muted"></i>
                                            <a href="mailto:@Model.Email">@Model.Email</a>
                                        </dd>

                                        <dt class="col-sm-4">Số điện thoại</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-phone me-2 text-muted"></i>
                                            @Model.SoDienThoai
                                        </dd>

                                        <dt class="col-sm-4">Mật khẩu</dt>
                                        <dd class="col-sm-8">
                                            <i class="fas fa-lock me-2 text-muted"></i>
                                            ********
                                            <small class="text-muted d-block mt-1">(Mật khẩu được bảo mật)</small>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-ngdung {
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }

    .avatar-ng {
        width: 100px;
        height: 100px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    dt {
        font-weight: 600;
        color: #6c757d;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.5em 0.75em;
    }

    .bg-light-primary {
        background-color: rgba(13,110,253,0.1);
    }

    @@media print {
        .btn, .card-header {
            display: none !important;
        }
    }
</style>