@model DichVuChuyenNha.Models.PhanCong

@{
    ViewData["Title"] = "Xóa phân công";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-trash-alt me-2"></i>@ViewData["Title"] - #@Model.MaPhanCong
                        </h4>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-triangle me-2"></i>Bạn có chắc chắn muốn xóa phân công này?
                        </h5>
                        <p class="mb-0">Thao tác này không thể hoàn tác. Tất cả thông tin liên quan đến phân công sẽ bị xóa vĩnh viễn.</p>
                    </div>

                    <div class="row">
                        <!-- Assignment Information -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-calendar-day me-2"></i>Thông tin phân công</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold">Ngày phân công:</dt>
                                        <dd class="col-sm-8">@Model.NgayPhanCong?.ToString("dd/MM/yyyy HH:mm")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Order Information -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Thông tin đơn hàng</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold">Mã đơn hàng:</dt>
                                        <dd class="col-sm-8">@Model.MaDonHangNavigation?.MaDonHang</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Employee Information -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>Thông tin nhân viên</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 fw-bold">Mã nhân viên:</dt>
                                        <dd class="col-sm-8">@Model.MaNhanVienNavigation?.MaNhanVien</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <!-- Delete Form -->
                        <div class="col-12">
                            <div class="card border-danger">
                                <div class="card-body text-center">
                                    <form asp-action="Delete" class="d-inline-block">
                                        <input type="hidden" asp-for="MaPhanCong" />
                                        <button type="submit" class="btn btn-danger px-4 me-3">
                                            <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
                                        </button>
                                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                            <i class="fas fa-times me-1"></i> Hủy bỏ
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    .btn-danger {
        background-color: #e74a3b;
        border-color: #e74a3b;
    }

    .btn-outline-secondary {
        border-color: #d1d3e2;
    }

    .alert-warning {
        background-color: #f6e3a3;
        border-color: #f6e3a3;
        color: #856404;
    }

    .border-danger {
        border-color: #e74a3b !important;
    }
</style>