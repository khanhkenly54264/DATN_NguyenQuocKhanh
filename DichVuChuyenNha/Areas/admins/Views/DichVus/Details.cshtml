@model DichVuChuyenNha.Models.DichVu

@{
    ViewData["Title"] = "Chi Tiết Dịch Vụ";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-concierge-bell me-2"></i>@ViewData["Title"]
                        </h4>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Service Summary -->
                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            <div class="avatar-profile mb-3">
                                <div class="avatar bg-light-primary rounded-circle p-3 mb-2">
                                    <i class="fas fa-truck-loading fa-3x text-primary"></i>
                                </div>
                                <h5 class="mb-1">@Model.TenDichVu</h5>
                                <span class="badge bg-success mb-2">@string.Format("{0:N0}", Model.ChiPhi) VNĐ</span>
                                <p class="text-muted small">Mã DV: @Model.MaDichVu</p>
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-action="Edit" asp-route-id="@Model.MaDichVu" class="btn btn-primary">
                                    <i class="fas fa-edit me-1"></i> Chỉnh sửa
                                </a>
                            </div>
                        </div>

                        <!-- Service Details -->
                        <div class="col-md-8">
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin dịch vụ</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Tên dịch vụ</dt>
                                        <dd class="col-sm-8">@Model.TenDichVu</dd>

                                        <dt class="col-sm-4">Chi phí</dt>
                                        <dd class="col-sm-8">
                                            <span class="fw-bold text-success">@string.Format("{0:N0}", Model.ChiPhi) VNĐ</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="fas fa-truck me-2"></i>Thông tin đơn hàng</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Mã đơn hàng</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">ĐH-@Model.MaDonHangNavigation?.MaDonHang</span>
                                        </dd>

                                        <dt class="col-sm-4">Tình trạng</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-primary">@Model.MaDonHangNavigation?.TrangThai</span>
                                        </dd>

                                        <dt class="col-sm-4">Địa chỉ giao hàng</dt>
                                        <dd class="col-sm-8">
                                            @Model.MaDonHangNavigation?.DiaChiHienTai → @Model.MaDonHangNavigation?.DiaChiDich
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-profile {
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 0.5rem;
    }

    .avatar {
        width: 100px;
        height: 100px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    dt {
        font-weight: 600;
        color: #6c757d;
    }

    .badge {
        font-size: 0.85em;
        padding: 0.5em 0.75em;
    }

    .bg-light-primary {
        background-color: rgba(13,110,253,0.1);
    }
</style>