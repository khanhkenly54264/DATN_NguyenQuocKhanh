@{
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <!-- Card 1 -->
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Số đơn đang xử lý</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="truck"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@ViewBag.TongDonHangDXL Đơn</h1>
            </div>
        </div>
    </div>

    <!-- Card 2 -->
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Số khách hàng</h5>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="users"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@ViewBag.TongKhachHang Khách</h1>
            </div>
        </div>
    </div>

    <!-- Card 3 -->
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h4 class="card-title">Doanh thu</h4>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="dollar-sign"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@ViewBag.TongDoanhThu.ToString("N0") VNĐ</h1>
            </div>
        </div>
    </div>

    <!-- Card 4 -->
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h4 class="card-title">Số đơn hàng</h4>
                    </div>
                    <div class="col-auto">
                        <div class="stat text-primary">
                            <i class="align-middle" data-feather="shopping-cart"></i>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@ViewBag.TongDonHang Đơn</h1>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Biểu đồ số lượng đơn hàng theo tháng</h2>
        <canvas id="ordersChart" height="200"></canvas>
    </div>
    <div class="col-md-6">
        <h2>Biểu đồ doanh thu hàng theo tháng</h2>
        <canvas id="thanhToanChart" height="200"></canvas>
    </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        fetch('@Url.Action("OrderChartData", "Home", new { area = "admins" })')
            .then(response => response.json())
            .then(data => {
                const ctx = document.getElementById('ordersChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.labels,
                        datasets: [{
                            label: 'Số lượng đơn hàng theo tháng',
                            data: data.orderCounts,
                            backgroundColor: 'rgba(54, 162, 235, 0.5)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                precision: 0
                            }
                        }
                    }
                });
            });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        async function loadChart() {
            const response = await fetch('/admins/ThanhToans/ThongKe');
            const data = await response.json();

            const labels = data.map(x =>x.thang);
            const values = data.map(x => x.tongTien);

            const ctx = document.getElementById('thanhToanChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Tổng doanh thu theo tháng (VND)',
                        data: values,
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return new Intl.NumberFormat('vi-VN', {
                                        style: 'currency',
                                        currency: 'VND'
                                    }).format(value);
                                }
                            }
                        }
                    }
                }
            });
        }

        loadChart();
    </script>
