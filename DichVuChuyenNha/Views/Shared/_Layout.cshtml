                    <div class="chat-header">
                        <div class="chat-title">Nhắn tin hỗ trợ</div>
                        <div class="chat-close" id="customerCloseChat">×</div>
                    </div>
                    <div class="chat-content" id="customerChatContent">
                        <div class="message received">
                            <div class="message-bubble">Xin chào! Chúng tôi có thể giúp gì cho bạn?</div>
                            <div class="message-info">
                                <span class="message-time">10:30 AM</span>
                            </div>
                        </div>
                    </div>
                    <div class="chat-input">
                        <textarea class="message-input" id="customerMessageInput" placeholder="Nhập tin nhắn..." rows="1"></textarea>
                        <button class="send-button" id="customerSendButton">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
                <div class="chat-button" id="customerChatButton">
                    <i class="far fa-comment-dots"></i>
                </div>
            </div>

            <script>
                // Nội dung của chatData.js được tích hợp trực tiếp
                               // Nội dung của chatData.js được tích hợp trực tiếp
                const chatData = {
                    currentCustomerId: null,
                    currentAdminId: 'admin01',
                    conversations: {
                        
                        
                    }
                };

                function getChatData() {
                    return chatData;
                }

                function addMessage(customerId, message, sender) {
                    const now = new Date();
                    const timeString = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                    if (!chatData.conversations[customerId]) {
                        chatData.conversations[customerId] = {
                            customerName: 'Khách hàng ' + customerId.substr(4),
                            messages: []
                        };
                    }
                    chatData.conversations[customerId].messages.push({
                        sender: sender,
                        content: message,
                        time: timeString
                    });
                    // Lưu vào localStorage
                    localStorage.setItem('chatData', JSON.stringify(chatData));
                }

                // Logic chính
                // Lấy các phần tử DOM
                const customerChatButton = document.getElementById('customerChatButton');
                const customerChatBox = document.getElementById('customerChatBox');
                const customerCloseChat = document.getElementById('customerCloseChat');
                const customerChatContent = document.getElementById('customerChatContent');
                const customerMessageInput = document.getElementById('customerMessageInput');
                const customerSendButton = document.getElementById('customerSendButton');

                // Kiểm tra DOM
                console.log('customerChatButton:', customerChatButton);
                console.log('customerChatBox:', customerChatBox);

                // Đảm bảo tất cả phần tử tồn tại trước khi gán sự kiện
                if (!customerChatButton || !customerChatBox || !customerCloseChat || !customerChatContent || !customerMessageInput || !customerSendButton) {
                    console.error('Một hoặc nhiều phần tử DOM không được tìm thấy. Kiểm tra HTML:', {
                        customerChatButton,
                        customerChatBox,
                        customerCloseChat,
                        customerChatContent,
                        customerMessageInput,
                        customerSendButton
                    });
                    throw new Error('Missing DOM elements');
                }

                // Khởi tạo, tải dữ liệu từ localStorage nếu có
                const savedChatData = localStorage.getItem('chatData');
                if (savedChatData) {
                    Object.assign(chatData, JSON.parse(savedChatData));
                }

                // Tạo ID ngẫu nhiên cho khách hàng
                if (!localStorage.getItem('customerId')) {
                    localStorage.setItem('customerId', 'cust' + Math.random().toString(36).substr(2, 6));
                }
                const customerId = localStorage.getItem('customerId');

                // Khởi tạo dữ liệu chat
                if (!chatData.conversations[customerId]) {
                    chatData.conversations[customerId] = {
                        customerName: 'Khách hàng ' + customerId.substr(4),
                        messages: [
                            {
                                sender: 'admin01',
                                content: 'Xin chào! Chúng tôi có thể giúp gì cho bạn?',
                                time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })
                            }
                        ]
                    };
                    // Lưu lại vào localStorage sau khi khởi tạo
                    localStorage.setItem('chatData', JSON.stringify(chatData));
                }

                // Mở/đóng hộp thoại chat
                customerChatButton.addEventListener('click', function () {
                    console.log('Chat button clicked');
                    console.log('Before toggle - chatBox display:', window.getComputedStyle(customerChatBox).display);
                    customerChatBox.classList.toggle('show');
                    console.log('After toggle - chatBox display:', window.getComputedStyle(customerChatBox).display);
                    loadCustomerMessages();
                });

                customerCloseChat.addEventListener('click', function () {
                    console.log('Close button clicked');
                    customerChatBox.classList.remove('show');
                });

                // Tải tin nhắn
                function loadCustomerMessages() {
                    // Tải dữ liệu mới nhất từ localStorage
                    const updatedChatData = localStorage.getItem('chatData');
                    if (updatedChatData) {
                        Object.assign(chatData, JSON.parse(updatedChatData));
                    }

                    const messages = chatData.conversations[customerId].messages;
                    customerChatContent.innerHTML = '';

                    messages.forEach(msg => {
                        const isReceived = msg.sender !== customerId;
                        const messageElement = `
                            <div class="message ${isReceived ? 'received' : 'sent'}">
                                <div class="message-bubble">${msg.content}</div>
                                <div class="message-info">
                                    <span class="message-time">${msg.time}</span>
                                </div>
                            </div>
                        `;
                        customerChatContent.insertAdjacentHTML('beforeend', messageElement);
                    });

                    customerChatContent.scrollTop = customerChatContent.scrollHeight;
                }

                // Gửi tin nhắn
                function sendCustomerMessage() {
                    const message = customerMessageInput.value.trim();
                    if (message === '') return;

                    addMessage(customerId, message, customerId);

                    // Hiển thị tin nhắn
                    loadCustomerMessages();
                    customerMessageInput.value = '';

                    // Cuộn xuống dưới cùng
                    customerChatContent.scrollTop = customerChatContent.scrollHeight;
                }

                // Gửi tin nhắn khi nhấn nút hoặc Enter
                customerSendButton.addEventListener('click', sendCustomerMessage);

                customerMessageInput.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                        sendCustomerMessage();
                    }
                });

                // Tự động mở rộng textarea
                customerMessageInput.addEventListener('input', function () {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });

                // Tự động tải tin nhắn mỗi 3 giây
                setInterval(() => {
                    // Chỉ tải tin nhắn nếu hộp chat đang mở
                    if (customerChatBox.classList.contains('show')) {
                        console.log('Auto-refreshing messages every 3 seconds...');
                        loadCustomerMessages();
                    }
                }, 3000);

                // Lắng nghe sự thay đổi trong localStorage
                window.addEventListener('storage', function (e) {
                    if (e.key === 'chatData' && customerChatBox.classList.contains('show')) {
                        console.log('localStorage changed:', e);
                        loadCustomerMessages();
                    }
                });

                // Khởi tạo
                console.log('Initial chatData:', chatData);
                loadCustomerMessages();
            </script>
        </main>
