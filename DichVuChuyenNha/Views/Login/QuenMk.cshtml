    body {
        background-image: url('/images/nen.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .btn-primary {
        width: 100%;
        border-radius: 25px;
        padding: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .input-group .form-control {
        border-radius: 6px 0 0 6px;
    }

    .input-group-text {
        background-color: #fff;
        border-radius: 0 6px 6px 0;
        cursor: pointer;
        padding: 10px 15px;
    }

        .input-group-text i {
            color: #007bff;
            font-size: 1.2rem;
        }

        .input-group-text:hover i {
            color: #0056b3;
        }
</style>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 rounded-4" style="width: 380px; background: #fff;">
        <div class="text-center">
            <h3 class="text-primary fw-bold">Quên mật khẩu</h3>
        </div>
        <input id="Message" type="hidden" value="@ViewBag.Message" />
        <form asp-action="QuenMk" id="loginForm">
            <div class="form-group mb-3">
                <label asp-for="TenDangNhap" class="form-label fw-semibold">Tên đăng nhập</label>
                <input asp-for="TenDangNhap" id="TenDangNhap" class="form-control rounded-3" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="TenDangNhap" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary fw-semibold rounded-3">
                    </i> Xác nhận
                </button>
            </div>
            <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
                <a href="/Login/index" style="text-decoration: none; color: blue;">Đăng nhập</a>
                <a href="/Login/DangKy" style="text-decoration: none; color: blue;">Đăng ký</a>
            </div>
        </form>
    </div>
</div>
